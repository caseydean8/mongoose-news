<div class="row">
    <div class="column">
        <h5>{{articles.title}}</h5>
        <p>{{body}}</p>
    </div>
</div>

<div class="row">
    <form action="/comment/{{articles._id}}" method="POST">
        <h5>Comment on this</h5>
        <div class="row">
            <div class="input-field">
                <i class="material-icons prefix">perm_identity</i>
                <input id="icon-prefix" type="text" placeholder="Name" name="name" class="validate-active">
            </div>
            <div class="input-field">
                <i class="material-icons prefix">comment</i>
                <input id="icon_telephone" type="text" placeholder="Comment" name="comment" class="validate-active">
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <center><input class="btn add-comment-button topnav" type="submit" value="Submit"></center>
            </div>
        </div>
    </form>
</div>

<div class="row">
    <div class="col s2"></div>
    <div class="col s8">
        <h5>comments</h5>
        {{#if articles.comment}}
        {{#each articles.comment}}
        <div class="card">
            <p id="nameComment">{{name}}</p>
            <p>{{body}}<p>
        </div>
        {{/each}}
        {{else}}
        <p>No Comments Yet.</p>
        {{/if}}
    </div>
</div>
<script src="https://code.jquery.com/jquery.js"></script>
<script src="/app.js"></script>