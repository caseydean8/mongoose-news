<div class="container">
    <div class="row">
        <div class="col s4" style="margin-top: 5%">
            <h4>{{this.title}}</h4>
        </div>
    </div>

    <div class="row">
        <div class="col s2">
            <h5>Comment on this</h5>
            <h5>Name</h5>
            <form>
                <input type="text" class="name">
                <h5>comment</h5>
                <textarea class="comment" type="text"></textarea>
                <br>
                <button class="btn btn-primary post-button" data-id="{{this.id}}" type="submit"
                    value="Submit">Submit</button>
            </form>
        </div>
    
    <div class="col s2">
        <h5>comments</h5>
        {{#if this.comment}}
        {{#each this.comment}}
        <div class="card">
            <p id="nameComment">{{this.name}}</p>
            <p>{{this.comment}}<p>
                    <button class="btn btn-danger delete" data-id="{{this.id}}">delete</button>
        </div>
        {{/each}}
        {{else}}
        <p>No Comments Yet.</p>
        {{/if}}
    </div>
    </div>
</div>