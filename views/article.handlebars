<div class="row">
    <div class="column">
        <h5>{{this.title}}</h5>
        <p>{{body}}</p>
    </div>
</div>

<div class="row">
    <form>
        <h5>Comment on this</h5>
        <div class="row">
            <div class="name">
                <i class="material-icons prefix">name</i>
                <input id="icon-prefix" type="text" placeholder="Name" name="name" class="validate-active">
            </div>
            
            <div class="comment">
                <i class="material-icons prefix">comment</i>
                <input id="icon_telephone" type="text" placeholder="Comment" name="comment" class="validate-active">
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <button class="btn btn-primary post-button" data-id="{{this.id}}" type="submit" value="Submit">Submit</button>
            </div>
        </div>
    </form>
</div>

<div class="row">
    <div class="col s2"></div>
    <div class="col s8">
        <h5>comments</h5>
        {{#if articles.comment}}
        {{#each articles.comment}}
        <div class="card">
            <p id="nameComment">{{name}}</p>
            <p>{{body}}<p>
        </div>
        {{/each}}
        {{else}}
        <p>No Comments Yet.</p>
        {{/if}}
    </div>
</div>
<script src="https://code.jquery.com/jquery.js"></script>
<script src="/app.js"></script>